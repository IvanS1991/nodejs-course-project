mixin userForm(formName, href)
  h1= formName
  form.form-group(action=href autocomplete="off" enctype="application/x-www-form-urlencoded" method="post")
    input.form-control(type="text" name="username" placeholder="Username")
    input.form-control(type="password" name="password" placeholder="Password")
    input.form-control(type="submit" value="Submit")