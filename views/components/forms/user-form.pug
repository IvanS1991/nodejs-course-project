mixin usersForm(formName, href)
  div.panel.panel-default
    div.panel-heading
      h1= formName
    div.panel-body.text-center
      form.form-group.user-form(action=href onsubmit='encryptPass()' method="post")
        input.form-control(type="text" name="username" placeholder="Username")
        input.form-control(type='password' id='tb-password' placeholder='Password')
        input.form-control.hidden(type="password" id='tb-password-secure' name="password" placeholder="Password")
        if formName === 'Register'
          input.form-control(type='password' id='tb-password-repeat' placeholder='Repeat password')
          input.form-control.hidden(type='password' id='tb-password-repeat-secure' name='passRepeat' placeholder='Repeat password')
        input.form-control.btn.btn-primary(type="submit" value=formName)