extends master/layout

block content
  div.main-container.form-width
    h1(align="center") Register
    form.user-form(action="/users/register" autocomplete="off" enctype="application/x-www-form-urlencoded" method="post")
      div.form-group 
        label(for="text") Username:
        input.form-control(id="tb-username" type="text" name="username" placeholder="Enter username")
      div.form-group 
        label(for="password") Password:
        input.form-control(id="tb-password" type="password" placeholder="Enter password")
        input.form-control.hidden(id="tb-password-secure" type="password" name="password" placeholder="Enter password")
      div.form-group 
        label(for="email") Email:
        input.form-control(id="tb-password-repeat" type="password" placeholder="Enter email")  
        input.form-control.hidden(id="tb-password-repeat-secure" type="password" name="passRepeat" placeholder="Enter email")  
      div.checkbox
        label 
          input(type="checkbox") 
          | Remember me
      div.align-center
        button.btn.btn-primary(type="submit") Submit
